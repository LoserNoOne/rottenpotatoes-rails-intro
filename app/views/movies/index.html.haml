-#  This file is app/views/movies/index.html.haml
%h2 All Movies
%h2 All Movies

= form_tag movies_path, :method => :get do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]"
  = submit_tag 'Refresh', :class => 'btn btn-primary'

%table#movies.table.table-striped.col-md-12
  %thead
    %tr
      %th{:style=> ("background-color: yellow-orange" if @sort == "title"), :class => ("hilite .text-danger" if @sort == "title")}= link_to "Movie Title", movies_path(:method => "title"), :id => "title_header"
      %th Rating
      %th{:style=> ("background-color: yellow-orange" if @sort == "released_date"), :class => ("hilite .text-danger" if @sort == "release_date")}= link_to "Release Date", movies_path(:method => "release_date"), :id => "release_date_header"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
